# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                controllers.Application.index
#ロビー
GET        /lobby                           controllers.Application.lobby

#認証
GET        /auth                            controllers.Auth.index
GET        /auth/login                      controllers.Auth.login
GET        /auth/logout                     controllers.Auth.logout
GET        /auth/steamOpenIDCallback        controllers.Auth.steamOpenIDCallback


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                    controllers.Assets.at(path="/public", file)

    